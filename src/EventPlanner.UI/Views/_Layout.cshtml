<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Site</title>
</head>
<body>
    <div>
        <nav class="navbar navbar-default">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">Link</a></li>
                </ul>
                @if (!User.Identity.IsAuthenticated)
            {
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-success navbar-btn navbar-right" })
                }
                else
                {
                    @Html.ActionLink("SignOut", "SignOut", "Account", null, new { @class = "btn btn-danger navbar-btn navbar-right" })
                }

            </div>
        </nav>
        @RenderBody()
    </div>
</body>
</html>
